<%- include('../partials/header') %>
    <div class="form-body">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items shadow-lg bg-body-tertiary">
                        <h3 class="text-secondary">Add Blog</h3>
                        <form class="requires-validation" method="post" enctype="multipart/form-data" novalidate>
                            <div class="col-md-12">
                                <input class="form-control" type="text" name="title" placeholder="Blog Title" required>
                                <div class="valid-feedback">Title field is valid!</div>
                                <div class="invalid-feedback">Title field cannot be blank!</div>
                            </div>
                            <div class="col-md-12">
                                <input class="form-control" type="text" name="description"
                                    placeholder="Blog Description" required>
                                <div class="valid-feedback">Description field is valid!</div>
                                <div class="invalid-feedback">Description field cannot be blank!</div>
                            </div>
                            <div class="col-md-12 mt-3">
                                <input class="form-control" type="file" name="file" required>
                                <div class="valid-feedback">Thumbnail field is valid!</div>
                                <div class="invalid-feedback">Thumbnail field cannot be blank!</div>
                            </div>
                            <div class="form-button mt-3">
                                <button id="submit" type="submit" class="btn btn-primary">Add Blog</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>
        <script>
            (function () {
                'use strict'
                const forms = document.querySelectorAll('.requires-validation')
                Array.from(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            form.classList.add('was-validated')
                        }, false)
                    })
            })()

        </script>